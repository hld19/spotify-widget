{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.spotify.widget",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://127.0.0.1:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Spotify Widget",
        "width": 620,
        "height": 300,
        "minWidth": 520,
        "minHeight": 220,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "dragDropEnabled": false,
        "shadow": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
